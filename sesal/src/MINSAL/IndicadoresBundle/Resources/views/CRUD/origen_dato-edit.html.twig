{% extends 'IndicadoresBundle:CRUD:edit.html.twig' %}

{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('bundles/indicadores/js/ConexionAdmin/origen_dato_edit.js') }}" type="text/javascript"></script>
{% endblock %}

{% block form %}
    {{ parent() }}
    {% if object.getEsFusionado==false %}
    {# Si se est√° editando el objeto presentar la intefaz para configurar el origen de datos#}
    
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <button type='button' name="btn_probar_sentencia" id='btn_probar_sentencia' class='btn btn-info'>
            <i class='glyphicon glyphicon-ok-circle'></i>
            {{admin.trans('probar_sentencia')}}
        </button>
        </div>
  	</div>
    
    {% endif %}
    {% if admin.id(object) %}
        {% if object.getEsFusionado==false %}
        <div id='configurar' data='{{object.id}}'>
        </div>
        {% endif %}
    {% endif %}
{% endblock form %}
