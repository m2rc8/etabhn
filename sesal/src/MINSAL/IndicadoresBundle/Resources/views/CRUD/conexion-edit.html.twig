{% extends 'IndicadoresBundle:CRUD:edit.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/indicadores/js/ConexionAdmin/conexion_edit.js') }}" type="text/javascript"></script>
    <script>
	$(document).ready(function() {
		var uniqid = $("[class=form-horizontal]").attr("action").split('=');
		var idcontrol = uniqid[1];
		$("#"+idcontrol+"_clave_first").keyup(function(e) {
			if($("#"+idcontrol+"_clave_first").val()!="")
				$("#btn_probar_conexion").removeAttr("disabled");
			else
				$("#btn_probar_conexion").attr("disabled",true);
		});
	});
	</script>
{% endblock %}

{% block content%}
    {{ parent() }}
    <button type='button' name="btn_probar_conexion" id='btn_probar_conexion' class='btn btn-warning' disabled="disabled">
        <i class='glyphicon glyphicon-random'></i>
        {{admin.trans('probar_conexion')}}
    </button>
{% endblock %}
